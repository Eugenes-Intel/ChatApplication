<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UIApplication">
    
    <Color x:Key="BackgroundDark">#900808</Color>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}" />

    <Color x:Key="BackgroundLight">#E88888</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />

    <Color x:Key="BackgroundPitch">#C86008</Color>
    <SolidColorBrush x:Key="BackgroundPitchBrush" Color="{StaticResource BackgroundPitch}" />

</ResourceDictionary>